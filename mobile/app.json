{
  "expo": {
    "name": "Brutal Team",
    "slug": "brutal-team",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "brutalteam",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#011936"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.brutalteam.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Precisamos de acesso à câmera para você tirar fotos de progresso.",
        "NSPhotoLibraryUsageDescription": "Precisamos de acesso às fotos para você selecionar imagens de progresso."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.brutalteam.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router"
    ]
  }
}
